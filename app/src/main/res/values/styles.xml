<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



        <item name="android:textAppearance">@style/AppTextAppearance.Medium</item>
    </style>

    <style name="AppTextAppearance.Bold" parent="android:TextAppearance">
        <item name="fontFamily">@font/seoulhangang_bold</item>
    </style>

    <style name="AppTextAppearance.ExtraBold" parent="android:TextAppearance">
        <item name="fontFamily">@font/seoulhangang_extrabold</item>
    </style>

    <style name="AppTextAppearance.Medium" parent="android:TextAppearance">
        <item name="fontFamily">@font/seoulhangang_medium</item>
    </style>

    <style name="AppTextAppearance.Light" parent="android:TextAppearance">
        <item name="fontFamily">@font/seoulhangang_light</item>
    </style>


</resources>